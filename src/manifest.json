{
  "manifest_version": 3,
  "name": "GitCharge",
  "description": "Turbocharging your GitLab experience",
  "options_page": "options.html",
  "background": { 
    "scripts": ["background.bundle.js"],
    "type": "module"
  },
  "action": {
    "default_icon": "gitChargeIconTransperentAddOn.png"
  },
  "icons": {
    "16": "gitChargeIconTransperentAddOn.png",
    "32": "gitChargeIconTransperentAddOn.png",
    "48": "gitChargeIconTransperentAddOn.png",
    "128": "gitChargeIconTransperentAddOn.png",
    "64": "gitChargeIconTransperentAddOn.png"
  },
  "version": "0.0.1",

  "host_permissions": ["<all_urls>"],

  "browser_specific_settings": {
    "gecko": {
      "id": "ajayextensionbiz@gmail.com"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentMellowtel.bundle.js"], 
      "run_at": "document_start",
      "all_frames": true
    }
],
  
  "web_accessible_resources": [
    {
      "resources": ["content.styles.css", "icon-128.png", "icon-34.png", "/*.png", "/*.gif", "/*.html", "/*.svg"],
      "matches": ["<all_urls>"]
    }
  ],


  "permissions": [
    "storage",
    "scripting",
    "declarativeNetRequest"
  ]
}